<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Редактировать ссылку</h1>
        <div style="width: 40%; margin: 25px auto">
            <form action="/links/<%= link._id %>?_method=PUT" method="POST">
                <div class="form-row">
                    <div class="form-group">
                      <input type="text" name="link[name]" class="form-control" value="<%= link.name %>">
                    </div>
                    <div class="form-group">
                      <input type="text" name="link[description]" class="form-control" value="<%= link.description %>">
                    </div>
                    <div class="form-group">
                      <input type="text" name="link[link]" class="form-control" value="<%= link.link %>">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-success" value="Сохранить">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
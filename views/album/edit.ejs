<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Изменить информацию об изображении</h1>
        <div style="width: 40%; margin: 25px auto">
            <form action="/album/<%= image._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group">
                      <input type="text" name="image[name]" class="form-control" value="<%= image.name %>">
                    </div>
                    <div class="form-group">
                      <input type="text" name="image[description]" class="form-control" value="<%= image.description %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="file" name="image">
                    </div>
                    <% if(image.image !== "/uploads/no-image.png") { %>
                      <div class="checkbox">
                          <img src="<%= image.image %>" width="50px">
                          <label><input type="checkbox" name="removeImage">Удалить изображение?</label>
                      </div>
                    <% } %>
                    <div class="form-group">
                      <input type="submit" class="btn btn-success" value="Сохранить">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
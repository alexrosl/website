<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Редактировать публикацию</h1>
        <div style="width: 40%; margin: 25px auto">
            <form action="/publications/<%= publication._id %>?_method=PUT" method="POST">
                <div class="form-row">
                    <div class="form-group">
                      <input type="text" name="publication[name]" class="form-control" value="<%= publication.name %>">
                    </div>
                    <div class="form-group">
                      <input type="text" name="publication[description]" class="form-control" value="<%= publication.description %>">
                    </div>
                    <div class="form-group">
                      <input type="text" name="publication[link]" class="form-control" value="<%= publication.link %>">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-success" value="Сохранить">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
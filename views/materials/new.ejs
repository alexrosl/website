<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Добавить новый материал в категорию <em><%= category.name %></em></h1>
        <div style="width: 40%; margin: 25px auto">
            <form action="/materials/category/<%= category._id %>/material" method="POST" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group">
                      <input type="text" name="name" class="form-control" placeholder="название">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="file" name="image" multiple="multiple">
                    </div>
                    <div class="form-group">
                      <input type="text" name="description" class="form-control" placeholder="описание">
                    </div>
                    <div class="form-group">
                      <input type="text" name="content" class="form-control" placeholder="содержание">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-success" value="Сохранить">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
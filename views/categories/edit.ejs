<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Редактировать категорию</h1>
        <div style="width: 40%; margin: 25px auto">
            <form action="/materials/category/<%= category._id %>?_method=PUT" method="POST">
                <div class="form-row">
                    <div class="form-group">
                      <input type="text" name="category[name]" class="form-control" value="<%= category.name %>">
                    </div>
                    <div class="form-group">
                      <input type="text" name="category[description]" class="form-control" value="<%= category.description %>">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-success" value="Сохранить">
                    </div>
                </div>
            </form>
            <form id="delete-form" action="/materials/category/<%= category._id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-xs btn-danger" value="Удалить">
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>